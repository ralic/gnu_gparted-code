                <inlinemediaobject>
                  <imageobject>
                    <imagedata 
                      fileref="figures/gparted-live-bios-setup-boot-order.png"
                      width="510px" scalefit="1"
                      format="PNG"/>
                    </imageobject>
                  <textobject>
                    <phrase>
                    Shows screen with display of BIOS device boot order.
                    </phrase>
                  </textobject>
                </inlinemediaobject>
              </ulink>
            </figure>
          </listitem>
        </orderedlist>
      </para>
    </sect2>

